rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's sessions subcollection
      match /sessions/{sessionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's analytics subcollection
      match /analytics/{analyticsId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's daily stats subcollection
      match /dailyStats/{statsId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global data (read-only for authenticated users)
    match /global/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin functions can write
    }
    
    // ML models and shared data
    match /ml_models/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin functions can write
    }
    
    // Integration configurations (user-specific)
    match /integrations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System metrics (read-only for authenticated users)
    match /system/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only functions can write
    }
  }
}