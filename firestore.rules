rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Tasks collection - accessible by authenticated users (user-based filtering in queries)
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Sessions collection - grouped by date, accessible by authenticated users
    match /sessions/{sessionDate} {
      allow read, write: if request.auth != null;
    }
    
    // Daily stats collection - accessible by authenticated users
    match /stats/{statsId} {
      allow read, write: if request.auth != null;
    }
    
    // User profiles and settings
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global configuration data (read-only for authenticated users)
    match /global/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin functions can write
    }
    
    // ML models and AI data (read-only for authenticated users)
    match /ml_models/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin functions can write
    }
    
    // Integration configurations (user-specific)
    match /integrations/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // System metrics and monitoring (read-only for authenticated users)
    match /system/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only functions can write
    }
    
    // Analytics sessions collection - user must own the document
    match /sessions/{sessionId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }
    
    // User goals collection - user must own the document
    match /goals/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Analytics data (accessible by authenticated users)
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null;
    }
  }
}