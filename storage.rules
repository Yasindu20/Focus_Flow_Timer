rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User-specific uploads (profile pictures, attachments, exports)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Analytics exports
    match /exports/{userId}/{exportId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only functions can create exports
    }
    
    // Shared assets (sounds, icons, etc.)
    match /assets/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin can upload shared assets
    }
    
    // ML model files
    match /models/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only functions can update models
    }
  }
}